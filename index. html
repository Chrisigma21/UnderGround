  <script>
    function changeSong(songId) {
      let playerUrl = '';
      
      // Sett URL for de ulike sangene (bytt ut med de faktiske SoundCloud URLene)
      if (songId === 'song1') {
        playerUrl = 'https://w.soundcloud.com/player/?url=INSERT_SOUNDCLOUD_URL_SONG1&color=ff5500';
      } else if (songId === 'song2') {
        playerUrl = 'https://w.soundcloud.com/player/?url=INSERT_SOUNDCLOUD_URL_SONG2&color=ff5500';
      } else if (songId === 'song3') {
        playerUrl = 'https://w.soundcloud.com/player/?url=INSERT_SOUNDCLOUD_URL_SONG3&color=ff5500';
      }

      // Endre src-verdien på iframe for å laste den valgte sangen
      document.getElementById('soundcloud-player').src = playerUrl;
    }
  </script>
